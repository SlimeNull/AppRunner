<Page x:Class="AppRunner.Views.ApplicationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ws="https://schemas.elecho.dev/wpfsuite"
      xmlns:local="clr-namespace:AppRunner.Views"
      xmlns:mk="clr-namespace:AppRunner.MarkupExtensions"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      d:Background="White"
      Title="ApplicationsPage"
      d:DataContext="{d:DesignInstance Type=local:ApplicationsPage}">

    <Page.Resources>
        <ws:NumberCompareConverter x:Key="NumberNotZeroConverter"
                                   Comparison="NotEqual"
                                   TargetValue="0"/>
    </Page.Resources>

    <Grid>
        <ws:ScrollViewer>
            <Grid Margin="14 14 14 0">
                <ws:ConditionalControl>
                    <ws:ConditionalControl.ContentWhenTrue>
                        <ItemsControl ItemsSource="{Binding ViewModel.Applications}">

                        </ItemsControl>
                    </ws:ConditionalControl.ContentWhenTrue>
                    <ws:ConditionalControl.ContentWhenFalse>
                        <TextBlock Text="{mk:LocalString Tips.ThereIsNothingHere}"
                                   Foreground="Gray"
                                   Margin="8"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"/>
                    </ws:ConditionalControl.ContentWhenFalse>
                </ws:ConditionalControl>
            </Grid>
        </ws:ScrollViewer>

        <ws:Dialog IsOpen="{Binding ViewModel.IsAddApplicationDialogOpen,Mode=TwoWay}">
            <Border Background="#ffffff"
                    MinWidth="320"
                    CornerRadius="8"
                    Padding="14">
                <ws:StackPanel Spacing="4">
                    <TextBlock Text="{mk:LocalString Title.AddNewApplication}"
                               FontSize="18"/>

                    <StackPanel>
                        <TextBlock Text="Application Type:"/>
                        <ws:ComboBox/>
                    </StackPanel>

                    <ws:StackPanel Spacing="4"
                                   HorizontalAlignment="Right"
                                   Orientation="Horizontal">

                        <ws:Button Style="{StaticResource ButtonStyles.Normal}" 
                                   Command="{Binding CancelAddApplicationDialogCommand}"
                                   Content="{mk:LocalString Common.Cancel}"/>

                        <ws:Button Style="{StaticResource ButtonStyles.Normal}" 
                                   Command="{Binding ConfirmAddApplicationDialogCommand}"
                                   Content="{mk:LocalString Common.OK}"/>
                    </ws:StackPanel>
                </ws:StackPanel>
            </Border>
        </ws:Dialog>
    </Grid>
</Page>
